generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
  previewFeatures = ["driverAdapters"]
}


datasource db {
  provider = "postgresql"
}


model Email{
  id          String   @id @default(cuid())
  sender      String
  recipient   String
  subject     String
  body        String
  sentAt      DateTime @default(now())
  source      String
}